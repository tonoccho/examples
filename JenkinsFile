pipeline{
    agent any

    stages{
        stage("preparation"){
            steps {
                deleteDir()
            }
        }
        stage("compilation") {
            steps{
                mvn clean install
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}